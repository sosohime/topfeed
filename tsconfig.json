{
	"compilerOptions": {
    "sourceMap": false,
    "module": "commonjs",
    "outDir": "dist",
		"target": "es2015",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
  },
	"include": ["src/**/*", "typings/**/*.d.ts"]
}
