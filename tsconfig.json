{
	"compilerOptions": {
		"outDir": "./lib",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es2015",
    "lib": ["es2017", "dom"],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"files": ["src/typings/index.d.ts", "src/typings/module.d.ts"],
	"include": ["src/**/*"]
}
